<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1> Listagem de livros </h1>

        <table id="books">
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
                <td></td>
                <td></td>
            </tr>
            <for|book| of=data.books>     
            <tr id="book_${book.id}" > 
              <br>  
                <td>${book.id}</td>
                <td>${book.title}</td>
                <td>${book.price}</td>
                <td><a href="/books/form/${book.id}">Editar</a></td> 
                <td><a href="#" data-ref="${book.id}" data-type="remove">Remover</a></td> 
            </tr>
            </for>
        </table> 

        <script src="/static/js/remove-book.js">
        </script> 
    </body> 
</html>

